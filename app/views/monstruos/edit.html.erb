<h1> Editar monstruo </h1>

<div class="col-md-4">
    <%= form_tag :action => 'edit' do %>
       <div class="form-group"><%= text_field_tag "nombre","", :placeholder => "Nombre", :required => "required", class:"form-control" %></div>
       <div class="form-group"><%= text_field_tag "apellido","", :placeholder => "Apellido", :required => "required", class:"form-control" %></div>
       <div class="form-group"><%= submit_tag "Agregar", class:"btn btn-primary" %></div>
    <% end %>
</div>